{
  "name": "student-profile-backend",
  "version": "0.0.1",
  "description": "The backend portion of the Student Profile web app",
  "type": "module",
  "scripts": {
    "serve": "npm run setlocal && npm run servecmd",
    "serve-linux": "export NODE_ENV='local' && nodemon ./src/server.js",
    "serve_linux1": "export NODE_ENV=local1 && nodemon ./src/server.js",
    "serve_linux2": "export NODE_ENV=local2 && nodemon ./src/server.js",
    "settest": "set NODE_ENV='test'",
    "setlocal": "set NODE_ENV='local'",
    "servecmd": "nodemon ./src/server.js",
    "start": "node --max-old-space-size=150 ./src/server.js",
    "lint": "node_modules/.bin/eslint . --no-fix --ignore-pattern 'node_modules'",
    "lint:fix": "node_modules/.bin/eslint . --fix --ignore-pattern 'node_modules'",
    "test": "node_modules/.bin/jest --env node",
    "test-linux": "export NODE_ENV=test && node_modules/.bin/jest",
    "test:local": "npm run setlocal && npm run test",
    "test:unit": "npm run settest && npm run test",
    "clean": "rm -rf coverage dist",
    "pretest": "npm run lint",
    "purge": "rm -rf node_modules",
    "reinstall": "npm run purge && npm install",
    "test:unit-linux": "export NODE_ENV=test && npm run test"
  },
  "dependencies": {
    "@js-joda/core": "^5.2.0",
    "@js-joda/locale_en": "^4.7.0",
    "atob": "^2.1.2",
    "axios": "^1.7.2",
    "body-parser": "^1.19.0",
    "config": "^3.3.3",
    "connect-redis": "^7.1.1",
    "cors": "^2.8.5",
    "cron": "^3.1.7",
    "dotenv": "^16.4.5",
    "express": "^4.17.1",
    "express-prometheus-middleware": "^1.2.0",
    "express-session": "^1.17.1",
    "express-validator": "^7.1.0",
    "fast-safe-stringify": "^2.0.7",
    "has-ansi": "^5.0.1",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.4.1",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment-timezone": "^0.5.45",
    "morgan": "^1.9.1",
    "nats": "^2.26.0",
    "nconf": "^0.12.1",
    "nocache": "^4.0.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.0",
    "passport-openidconnect-keycloak-idp": "^0.1.6",
    "path": "0.12.7",
    "querystring": "^0.2.1",
    "redlock": "^5.0.0-beta.2",
    "strip-ansi": "^7.1.0",
    "uuid": "^9.0.1",
    "winston": "^3.5.1",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.5.0",
    "axios-mock-adapter": "^1.19.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-rewire": "^1.2.0",
    "babel-preset-airbnb": "^5.0.0",
    "core-js": "^3.12.1",
    "eslint": "^9.4.0",
    "jest": "^29.7.0",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^3.1.3",
    "redis-mock": "^0.56.3",
    "supertest": "^7.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "reporters": [
      "default",
      "jest-junit"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/tests/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)"
    ],
    "testURL": "http://localhost",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "jest-junit": {
    "outputDirectory": "./tests/unit/reports/",
    "outputName": "./junit.xml",
    "usePathForSuitName": true
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-report.xml",
    "indent": 2
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bcgov/EDUC-STUDENT-PROFILE.git"
  },
  "bugs": {
    "url": "https://github.com/bcgov/EDUC-STUDENT-PROFILE/issues"
  }
}
