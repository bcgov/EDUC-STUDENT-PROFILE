{
  "name": "student-profile-backend",
  "version": "0.0.1",
  "description": "The backend portion of the Student Profile web app",
  "type": "module",
  "scripts": {
    "serve": "npm run setlocal && npm run servecmd",
    "serve-linux": "export NODE_ENV='local' && nodemon ./src/server.js",
    "serve_linux1": "export NODE_ENV=local1 && nodemon ./src/server.js",
    "serve_linux2": "export NODE_ENV=local2 && nodemon ./src/server.js",
    "settest": "set NODE_ENV='test'",
    "setlocal": "set NODE_ENV='local'",
    "servecmd": "nodemon ./src/server.js",
    "start": "node --max-old-space-size=150 ./src/server.js",
    "lint": "node_modules/.bin/eslint . --no-fix --ignore-pattern 'node_modules'",
    "test": "NODE_ENV=test vitest run",
    "test:watch": "vitest",
    "test:debug": "vitest --inspect-brk --no-file-parallelism",
    "clean": "rm -rf coverage dist",
    "purge": "rm -rf node_modules",
    "reinstall": "npm run purge && npm install",
    "test:unit-linux": "export NODE_ENV=test && npm run test"
  },
  "dependencies": {
    "@js-joda/core": "^5.6.3",
    "@js-joda/locale_en": "^4.14.0",
    "atob": "^2.1.2",
    "axios": "^1.7.4",
    "body-parser": "^1.20.2",
    "config": "^3.3.12",
    "connect-redis": "^7.1.1",
    "cors": "^2.8.5",
    "cron": "^3.1.7",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-prometheus-middleware": "^1.2.0",
    "express-rate-limit": "^7.4.0",
    "express-session": "^1.18.0",
    "express-validator": "^7.2.0",
    "fast-safe-stringify": "^2.1.1",
    "has-ansi": "^6.0.0",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment-timezone": "^0.5.45",
    "morgan": "^1.10.0",
    "nats": "^2.28.2",
    "nconf": "^0.12.1",
    "nocache": "^4.0.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-openidconnect-keycloak-idp": "^0.1.6",
    "path": "0.12.7",
    "querystring": "^0.2.1",
    "redlock": "^5.0.0-beta.2",
    "strip-ansi": "^7.1.0",
    "uuid": "^10.0.0",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.9.0",
    "axios-mock-adapter": "^2.0.0",
    "core-js": "^3.38.0",
    "eslint": "^9.9.0",
    "nodemon": "^3.1.4",
    "redis-mock": "^0.56.3",
    "vitest": "^2.0.5",
    "vitest-sonar-reporter": "^2.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bcgov/EDUC-STUDENT-PROFILE.git"
  },
  "bugs": {
    "url": "https://github.com/bcgov/EDUC-STUDENT-PROFILE/issues"
  }
}
